<resources>

    <!-- Base application theme. -->
    <style name="Bookman" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="Bookman.TransparentStatus">
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Bookman.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Bookman.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Bookman.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
